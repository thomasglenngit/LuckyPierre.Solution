@{
  Layout = "_Layout";
}

@model LuckyPierre.Models.Treat

<h3>Add new treat:</h3>
<hr />
@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(model => model.TreatName)
    @Html.TextBoxFor(model => model.TreatName, new {@class = "form-control", @required  = "required"})
  </div>

  <div class="form-group">
    @Html.LabelFor(model => model.Batches)
    @Html.TextBoxFor(model => model.Batches, new {@class = "form-control", @required  = "required"})
  </div>
  <input type="submit" value="Add new treat" class="btn" />
}

<p>@Html.ActionLink("Back to treats list", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>










